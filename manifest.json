{
  "name": "Work and rest",
  "description": "A timer to alert users when it is time for a break",
  "version": "0.1",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"]
    }
  ],
  "permissions":  ["storage", "activeTab", "scripting"]
}